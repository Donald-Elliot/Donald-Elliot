{
    "collection": "Workers",
    "database": "ChrysalisSpectrum",
    "roles": [
        {
            "name": "owner",
            "apply_when": {
                "WorkerId": "%%user.id"
            },
            "fields": {
                "Worker First Name": {},
                "Worker Last Name": {},
                "Worker Name": {}
            },
            "read": true,
            "write": true,
            "insert": true,
            "delete": true,
            "search": true,
            "additional_fields": {}
        },
        {
            "name": "non-owner",
            "apply_when": {},
            "fields": {
                "Worker First Name": {},
                "Worker Last Name": {},
                "Worker Name": {}
            },
            "read": true,
            "write": false,
            "insert": false,
            "delete": false,
            "search": true,
            "additional_fields": {}
        }
    ]
}
